[
	condition:
		location(?event, ?request),
	type:
		single,
	production:
		{{ question() }} and
		link(In, ?event, ?p) and
        name(?p, ?request)
]

[
	condition:
		identity(?subject, ?request),
	type:
		multiple,
	production:
		sentence(?n) and
		{{ conjunction(?n, ?request) }}
]

// how old? : ?q => ?q years old
[
	condition:
		manner(?complement, ?q) and modifier(?e, ?complement) and isa(?complement, Old),
	type:
		single,
	production:
		{{ question() }} and
		mood(?e, Declarative) and
		modifier(?complement, ?s1) and
        determiner(?s1, ?q) and
        isa(?s1, Year)
]
